{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt"
  },
  "deploy": {
    "startCommand": "python main.py --sync-now",
    "restartPolicyType": "never",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}
